<Window x:Class="Ephemeris.WPF.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ephemeris.WPF"
        mc:Ignorable="d"
        Title="About" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <local:LogoImagePanel Width="118" Height="118" HorizontalAlignment="Center"/>
        <TextBox x:Name="LicenseText" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="200" Margin="0,10,0,0"/>
        <Button Content="_Close" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Close_Click"/>
    </StackPanel>
</Window>