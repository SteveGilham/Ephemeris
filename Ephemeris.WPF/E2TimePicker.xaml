<Window x:Class="Ephemeris.WPF.E2TimePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ephemeris.WPF"
        mc:Ignorable="d"
        Title="Time Picker" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Border Padding="5">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Click="Ok_Click"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Label x:Name="ScaleLabel" Content="30" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <local:Slider x:Name="ScaleBar" Value="30" Minimum="0" Maximum="60" VisibleRange="5" Width="200"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Center" Margin="0,10,0,0">
                <RadioButton x:Name="CbMin" Content="Minutes" GroupName="TimeUnits" Checked="TimeUnit_Checked"/>
                <RadioButton x:Name="CbHr" Content="Hour" GroupName="TimeUnits" Checked="TimeUnit_Checked"/>
                <RadioButton x:Name="CbDay" Content="Days" GroupName="TimeUnits" Checked="TimeUnit_Checked"/>
                <RadioButton x:Name="CbYr" Content="Years" GroupName="TimeUnits" Checked="TimeUnit_Checked"/>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>