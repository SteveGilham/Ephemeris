<UserControl x:Class="Ephemeris.WPF.EphemerisIIControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ephemeris.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Left: Time and Day Reporting / Holyday Selection -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" x:Name="TimeFormatPanel">
                <RadioButton x:Name="CbTest" Content="Astronometric" GroupName="TimeFormat" IsChecked="True" Checked="TimeFormat_Checked"/>
                <RadioButton x:Name="CbWest" Content="Western" GroupName="TimeFormat" Checked="TimeFormat_Checked"/>
                <RadioButton x:Name="CbEast" Content="Eastern" GroupName="TimeFormat" Checked="TimeFormat_Checked"/>
                <RadioButton x:Name="CbPamalt" Content="Pamaltelan" GroupName="TimeFormat" Checked="TimeFormat_Checked"/>
                <RadioButton x:Name="CbOrlanth" Content="Orlanthi" GroupName="TimeFormat" Checked="TimeFormat_Checked"/>
                <RadioButton x:Name="CbPeloria" Content="Pelorian" GroupName="TimeFormat" Checked="TimeFormat_Checked"/>
            </StackPanel>
            <ListBox Grid.Row="1" x:Name="HolyDaysListBox" SelectionChanged="HolyDaysListBox_SelectionChanged"/>
        </Grid>

        <!-- Top Right: Time Control Sliders -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
            <Label Content="Minutes"/>
            <local:Slider x:Name="MinBar" Value="0" Minimum="0" Maximum="59" VisibleRange="5"/>
            <Label Content="Hours"/>
            <local:Slider x:Name="HrBar" Value="0" Minimum="0" Maximum="23" VisibleRange="4"/>
            <Label Content="Day of week"/>
            <local:Slider x:Name="DowBar" Value="0" Minimum="0" Maximum="6" VisibleRange="1"/>
            <Label Content="Week"/>
            <local:Slider x:Name="WkBar" Value="0" Minimum="0" Maximum="41" VisibleRange="5"/>
            <Label Content="Years"/>
            <local:Slider x:Name="YrBar" Value="0" Minimum="0" Maximum="99" VisibleRange="5"/>
            <Label Content="Centuries"/>
            <local:Slider x:Name="CenBar" Value="126" Minimum="0" Maximum="129" VisibleRange="5"/>
            <CheckBox x:Name="CbRing" Content="Real size objects" IsChecked="False"/>
        </StackPanel>

        <!-- Middle Left: Step Interval Selection -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
            <Label Content=""/>
            <RadioButton x:Name="CbSec" Content="1 second" GroupName="StepInterval"/>
            <RadioButton x:Name="CbMin" Content="1 minute" GroupName="StepInterval" IsChecked="True"/>
            <RadioButton x:Name="CbTen" Content="10 minutes" GroupName="StepInterval"/>
            <RadioButton x:Name="CbHr" Content="1 hour" GroupName="StepInterval"/>
            <RadioButton x:Name="CbDay" Content="1 day" GroupName="StepInterval"/>
            <RadioButton x:Name="CbSday" Content="1 sidereal day" GroupName="StepInterval"/>
            <RadioButton x:Name="CbSolar" Content="1 solar day" GroupName="StepInterval"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="CbFree" Content="Ad lib." GroupName="StepInterval"/>
                <Button x:Name="FreehandButton" Content="Adjust..." Click="FreehandButton_Click"/>
            </StackPanel>
            <CheckBox x:Name="CbReverse" Content="Reverse"/>
            <Button x:Name="TickerButton" Content="Start" Click="TickerButton_Click"/>
        </StackPanel>

        <!-- Middle Right: Display Selection -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
            <Label Content=""/>
            <local:E2SelfButton Content="Midnight 00h" x:Name="Midnight00hButton"/>
            <local:E2SelfButton Content="Dawn" x:Name="DawnButton"/>
            <local:E2SelfButton Content="Noon" x:Name="NoonButton"/>
            <local:E2SelfButton Content="Dusk" x:Name="DuskButton"/>
            <local:E2SelfButton Content="Midnight 24h" x:Name="Midnight24hButton"/>
        </StackPanel>

        <!-- Bottom Row: Locator and Look Panels -->
        <local:E2LocatorPanel x:Name="LocatorPanel" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <local:E2LookPanel x:Name="LookAtPanel" Grid.Row="2" Grid.Column="1" Margin="5"/>
    </Grid>
</UserControl>